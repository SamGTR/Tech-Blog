<div class="mb-5 pt-3">
    <a href="/dashboard/create/"><button id="create-post" class="button is-primary is-pulled-right">Create post</button></a>
    <h2 class="title pb-4">Dashboard: your posts</h2><hr>
   
    {{#if posts.length}}
        {{#each posts as |post|}}
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}"><button class="button mb-5 ml-5 is-warning">Edit post</button></a>
        {{/each}}
    {{else}}
    <h6 class="pb-4 has-text-centered is-italic">You do not have any posts currently</h6>
    {{/if}}
</div> 

